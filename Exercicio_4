package plp_aula_java;
import java.util.Scanner;
/**
 *
 * @author Acer
 */
public class Exercicio_3 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        int x, y, soma;
        Scanner s = new Scanner(System.in);
        System.out.println("Digite o primeiro numero aqui:");
        x = s.nextInt();
        System.out.println("\nDigite o segundo numero aqui:");
        y = s.nextInt();
        soma = x + y;
        if (soma>10){
            System.out.println("A soma dos numeros é " +soma + " e ela é maior que 10");
        }
        else{
            System.out.printf("A soma dos numeros é %d e ele não é menor que 10\n", soma);
        }
    }
    
}
